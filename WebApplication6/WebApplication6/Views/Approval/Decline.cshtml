@model IEnumerable<WebApplication6.Models.ApprovalViewModel>

@{
    ViewBag.Title = "Decline";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Decline</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BloodGroup)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Message)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BloodGroup)
        </td>
        <td>
            @Html.ActionLink("Approve", "Approve", new { id = item.num })
            @Html.ActionLink("Decline", "Decline", new { id = item.num })
        </td>
    </tr>
}

</table>
