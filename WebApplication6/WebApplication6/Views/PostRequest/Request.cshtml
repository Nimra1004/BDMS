@model WebApplication6.Models.PostRequestModel

@{
    ViewBag.Title = "Request";
}
<style>
    body {
        background-size: 1400px;
        background-image: url(../Images/bg1.jpg);
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" style="color:#FFE033">
                   POST REQUEST!
                </h1>
                <ol class="breadcrumb">
                    <li>
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li class="active" style="color:#FFFFFF">Post Request</li>
                </ol>
            </div>
        </div>
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.CityName, "Write City:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CityName, new { style = "width: 200px,color:#000000" })
                    @Html.ValidationMessageFor(model => model.CityName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Longitude, "Enter Longitude:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Longitude, new { style = "width: 200px,color:#000000" })
                    @Html.ValidationMessageFor(model => model.Longitude)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Latitude, "Enter Latitude:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Latitude, new { style = "width: 200px,color:#000000" })
                    @Html.ValidationMessageFor(model => model.Latitude)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BloodGroup, "Select BloodGroup:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.BloodGroup, WebApplication6.Models.DonorViewModel.BloodGroupList(), " - - - - -Select One- - - - - ", htmlAttributes: new { size = "1", style = "width:250px, height:100px,color:#000000" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Message, "Write Discription:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Message, new { style = "width: 200px,color:#000000" })
                    @Html.ValidationMessageFor(model => model.Message)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
        </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
